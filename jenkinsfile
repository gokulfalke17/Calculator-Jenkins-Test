pipeline {
    agent any

    tools {
        jdk 'JDK17'              // Jenkins â†’ Tools â†’ JDK
        maven 'Maven3.9.11'      // Jenkins â†’ Tools â†’ Maven
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ”„ Checking out code from GitHub...'
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/gokulfalke17/Calculator-Jenkins-Test.git'
            }
        }

        stage('Build & Compile') {
            steps {
                echo 'âš™ï¸ Building project...'
                script {
                    if (isUnix()) {
                        sh 'mvn clean compile'
                    } else {
                        bat 'mvn clean compile'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running unit tests...'
                script {
                    if (isUnix()) {
                        sh 'mvn test'
                    } else {
                        bat 'mvn test'
                    }
                }
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Packaging application...'
                script {
                    if (isUnix()) {
                        sh 'mvn package'
                    } else {
                        bat 'mvn package'
                    }
                }
            }
        }


    }

    post {
        always {
            echo 'ğŸ“ Publishing test results...'
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'ğŸš€ Pipeline completed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
